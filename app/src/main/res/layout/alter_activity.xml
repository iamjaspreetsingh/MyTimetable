<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="No Of Classes Marked PRESENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="23dp"
        android:id="@+id/present_textview" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/present_textview"
        android:layout_alignStart="@+id/present_textview"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:id="@+id/view_present_counter" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_present_counter"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/subtract_present_counter"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/view_present_counter" />

    <Button
        android:text="MINUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtract_present_counter"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/view_present_counter" />







    <TextView
        android:text="No Of Classes Marked ABSENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="23dp"
        android:id="@+id/absent_textview" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/absent_textview"
        android:layout_alignStart="@+id/absent_textview"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:id="@+id/view_absent_counter" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_absent_counter"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/subtract_absent_counter"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/view_absent_counter" />

    <Button
        android:text="MINUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtract_absent_counter"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/view_absent_counter" />


    <TextView
        android:text="Attendance Percentage "
        android:paddingTop="35px"

        android:textSize="50px"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/percentage_textview" />


    <TextView
        android:text="No of classes you need to attend  for 70%"
        android:textSize="35px"
        android:paddingTop="35px"
        android:paddingBottom="35px"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />
    <TextView
        android:text="shows an integer"
        android:textSize="50px"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_of_classes_view"
        />

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35px"
        android:id="@+id/below_percentage_textview" />


</LinearLayout>